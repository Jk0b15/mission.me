<body>
  <header>Mission: Me</header>
  <div id="coinsDisplay">M√ºnzen: 0</div>
  <button class="btn" id="fireworkBtn">üéÜ</button>
  <button class="btn" id="resetBtn">Reset</button>
  <button class="btn" id="tutorialBtn">‚ùì</button>
  <button class="btn" id="shopBtn">Shop</button>
  <div id="missionContainer">
    <button class="btn" id="startBtn">Los geht‚Äôs!</button>
    <button class="btn" id="newTaskBtn" style="display:none">Andere Aufgabe</button>
    <button class="btn" id="doneBtn" style="display:none">Aufgabe erledigt</button>
    <p id="currentTask"></p>
  </div>
  <div id="popupContainer"></div>

  <div id="shopOverlay">
    <button class="btn" id="exitShopBtn">Schlie√üen ‚úñ</button>
    <h2>Themes freischalten:</h2>
    <button class="btn themeBtn" data-theme="dark">üåô Darkmode ‚Äì 100 M√ºnzen</button>
    <button class="btn themeBtn" data-theme="rainbow">üåà Farbenfroh ‚Äì 100 M√ºnzen</button>
    <button class="btn themeBtn" data-theme="ocean">üåä Ocean Blue ‚Äì 100 M√ºnzen</button>
    <button class="btn themeBtn" data-theme="desert">üèúÔ∏è Desert Yellow ‚Äì 100 M√ºnzen</button>
  </div>

  <script>
    const tasks = [
      'Trinke ein Glas Wasser',
      'Atme 10x tief durch',
      'Ordne deinen Schreibtisch',
      'Schreibe 3 Dinge auf, f√ºr die du dankbar bist',
      'Mach 10 Kniebeugen',
      'Gehe 5 Minuten spazieren',
      'Stell dein Handy auf lautlos',
      'Meditiere f√ºr 2 Minuten',
      'L√§chle dich im Spiegel an',
      'Lies eine Seite in einem Buch',
      'Sortiere Dateien auf deinem Desktop',
      'R√§ume 3 Dinge auf',
      'Schreibe einer netten Person',
      'Strecke dich f√ºr 1 Minute',
      'Setz dich gerade hin',
      'Tanze f√ºr 1 Lied',
      'Lerne ein neues Wort',
      'Mach 10 Hampelm√§nner',
      'Lass frische Luft ins Zimmer',
      'L√∂sche 5 unn√∂tige Apps/Bilder'
    ];

    let coins = 0;
    let unlockedThemes = {};
    let currentTheme = '';

    const startBtn = document.getElementById('startBtn');
    const newTaskBtn = document.getElementById('newTaskBtn');
    const doneBtn = document.getElementById('doneBtn');
    const currentTask = document.getElementById('currentTask');
    const coinsDisplay = document.getElementById('coinsDisplay');
    const popupContainer = document.getElementById('popupContainer');
    const shopOverlay = document.getElementById('shopOverlay');

    function showPopup(msg) {
      if (popupContainer.children.length >= 1) return;
      const popup = document.createElement('div');
      popup.className = 'popup';
      popup.innerText = msg;
      popupContainer.appendChild(popup);
      setTimeout(() => popup.remove(), 4000);
    }

    function getRandomTask() {
      return tasks[Math.floor(Math.random() * tasks.length)];
    }

    function updateCoinsDisplay() {
      coinsDisplay.innerText = `M√ºnzen: ${coins}`;
      if (coins >= 100) {
        showPopup('üéâ Du kannst jetzt ein neues Theme freischalten!');
      }
    }

    function applyTheme(name) {
      document.body.className = '';
      switch (name) {
        case 'dark':
          document.body.style.backgroundColor = '#222';
          document.body.style.color = '#eee';
          break;
        case 'rainbow':
          let hue = 0;
          clearInterval(window.rainbowInterval);
          window.rainbowInterval = setInterval(() => {
            document.body.style.backgroundColor = `hsl(${hue}, 80%, 70%)`;
            hue = (hue + 1) % 360;
          }, 100);
          break;
        case 'ocean':
          document.body.style.backgroundColor = '#004488';
          document.body.style.color = '#cceeff';
          break;
        case 'desert':
          document.body.style.backgroundColor = '#f4e2d8';
          document.body.style.color = '#5c4033';
          break;
        default:
          document.body.style.backgroundColor = '#f0f0f0';
          document.body.style.color = '#333';
          clearInterval(window.rainbowInterval);
      }
    }

    startBtn.onclick = () => {
      currentTask.innerText = getRandomTask();
      startBtn.style.display = 'none';
      newTaskBtn.style.display = 'inline-block';
      doneBtn.style.display = 'inline-block';
    };

    newTaskBtn.onclick = () => {
      currentTask.innerText = getRandomTask();
    };

    doneBtn.onclick = () => {
      coins += 5;
      updateCoinsDisplay();
    };

    document.getElementById('shopBtn').onclick = () => {
      shopOverlay.style.display = 'flex';
    };

    document.getElementById('exitShopBtn').onclick = () => {
      shopOverlay.style.display = 'none';
    };

    document.querySelectorAll('.themeBtn').forEach(btn => {
      btn.onclick = () => {
        const theme = btn.dataset.theme;
        if (unlockedThemes[theme]) {
          applyTheme(theme);
          currentTheme = theme;
        } else if (coins >= 100) {
          coins -= 100;
          unlockedThemes[theme] = true;
          applyTheme(theme);
          currentTheme = theme;
          updateCoinsDisplay();
        } else {
          showPopup('‚ùå Nicht genug M√ºnzen!');
        }
      };
    });

    document.getElementById('fireworkBtn').onclick = () => {
      if (coins >= 50) {
        coins -= 50;
        updateCoinsDisplay();
        showPopup('üéÜ Boom! Feuerwerk gestartet!');
      } else {
        showPopup('‚ùå Nicht genug M√ºnzen f√ºr Feuerwerk!');
      }
    };

    document.getElementById('resetBtn').onclick = () => {
      coins = 0;
      unlockedThemes = {};
      currentTheme = '';
      applyTheme('');
      updateCoinsDisplay();
      showPopup('üîÑ Alles wurde zur√ºckgesetzt!');
    };

    document.getElementById('tutorialBtn').onclick = () => {
      alert('üß† So funktioniert Mission: Me:\n\n1. Klicke auf "Los geht‚Äôs!"\n2. Erledige deine 5-Minuten-Aufgabe\n3. Verdiene M√ºnzen und schalte Themes frei!');
    };
  </script>
</body>

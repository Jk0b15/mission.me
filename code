      transition: background-color 0.5s, color 0.5s;
    }
    header {
      background-color: #4a90e2;
      padding: 1em;
      text-align: center;
      color: white;
      font-size: 1.5em;
      position: relative;
    }
    #missionContainer {
      padding: 2em;
      text-align: center;
    }
    .btn {
      padding: 0.8em 1.2em;
      margin: 0.5em;
      font-size: 1em;
      cursor: pointer;
      border: none;
      border-radius: 6px;
      background-color: #4a90e2;
      color: white;
      transition: background-color 0.3s;
    }
    .btn:hover {
      background-color: #357abd;
    }
    #shopBtn, #fireworkBtn, #resetBtn, #tutorialBtn {
      position: fixed;
      top: 1em;
      font-size: 0.8em;
    }
    #shopBtn { right: 1em; }
    #tutorialBtn { right: 6em; }
    #fireworkBtn { left: 1em; }
    #resetBtn { left: 6em; }
    #coinsDisplay {
      position: fixed;
      top: 1em;
      left: 50%;
      transform: translateX(-50%);
      background: #fff;
      padding: 0.5em 1em;
      border-radius: 10px;
      box-shadow: 0 0 5px rgba(0,0,0,0.2);
      font-weight: bold;
    }
    #popupContainer {
      position: fixed;
      right: 1em;
      bottom: 1em;
      display: flex;
      flex-direction: column;
      align-items: flex-end;
    }
    .popup {
      background: #4a90e2;
      color: white;
      padding: 0.5em 1em;
      margin-top: 0.3em;
      border-radius: 8px;
      animation: fadeOut 4s forwards;
    }
    @keyframes fadeOut {
      0% { opacity: 1; }
      80% { opacity: 1; }
      100% { opacity: 0; transform: translateX(100px); }
    }
    #shopOverlay {
      position: fixed;
      top: 0; left: 0;
      width: 100vw;
